<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sector_view="http://schemas.android.com/apk/res-auto"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent">

    <ru.kiryanov.circleview.presentation.ui.CircleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        circle:onCenter="true"
        android:layout_alignParentBottom="true"
        circle:sector_amount="8"
        circle:circle_radius="100dp"
        circle:circle_background="@android:color/holo_red_dark"
        />

</RelativeLayout>